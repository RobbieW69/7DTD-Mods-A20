<configs>

	<!-- The Walking Dead main menu -->
	<set xpath="/windows/window[@name='menuBackground']/texture[@name='bgTexture']/@texture">@modfolder:twdbackground.png</set>
	<remove xpath="/windows/window[@name='mainMenu']" />
	<append xpath="/windows">
	<window name="mainMenu" anchor="CenterBottom" pos="120,0" width="1050" height="780" controller="MainMenu" cursor_area="true">
      <grid pos="50,80" rows="13" cell_width="250" cell_height="70" repeat_content="false" arrangement="horizontal" pivot="center">
        <mainmenubutton name="btnNewGame" pivot="center" width="200" height="50" caption_key="xuiNewGame"  />
        <mainmenubutton name="btnContinueGame" pivot="center" width="200" height="50" caption_key="xuiContinueGame" />
        <mainmenubutton name="btnConnectToServer" pivot="center" width="200" height="50" caption_key="xuiConnectToServer" />
        <mainmenubutton name="btnEditingTools" pivot="center" width="200" height="50" caption_key="xuiEditingTools" />
        <mainmenubutton name="btnOptions" pivot="center" width="200" height="50" caption_key="xuiOptions" />
        <mainmenubutton name="btnCredits" pivot="center" width="200" height="50" caption_key="xuiCredits" />
        <mainmenubutton name="btnQuit" pivot="center" width="200" height="50" caption_key="xuiQuit" />
      </grid>
    </window>
	</append>

	<!-- This line changes the options for the number of blocks for Bedroll Dead Zone => zone without respawns -->
	<set xpath="/windows/window[@name='newContinueGame']/rect[@name='tabs']/rect[@name='tabsContents']/rect[@tab_key='xuiGameSettingsMultiplayer']/grid/gameoption[@name='BedrollDeadZoneSize']/@values">0, 10, 15, 20, 30, 40, 50, 60, 80, 100, 120</set>
	<set xpath="/windows/window[@name='newContinueGame']/rect[@name='tabs']/rect[@name='tabsContents']/rect[@tab_key='xuiGameSettingsGeneral']/grid/gameoption[@name='DayNightLength']/@values">1, 5, 10, 20, 30, 40, 50, 60, 90, 120, 180, 240, 480, 960, 1440</set>
	<set xpath="/windows/window[@name='newContinueGame']/rect[@name='tabs']/rect[@name='tabsContents']/rect[@tab_key='xuiGameSettingsGeneral']/grid/gameoption[@name='DayLightLength']/@values">0, 1, 2, 3, 4, 8, 12, 14, 16, 18, 20, 23, 24</set>
</configs>