<windows>

    <!-- Since A20 already has the combo box, we're just enabling it by KHA20 -->
	<append xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect[@controller='ContainerStandardControls']"> 		
		<combobox depth="3" name="cbxLockedSlots" pos="120,-7" width="100" height="30" tooltip_key="xuiStashLockedSlots" type="ComboBoxInt" value_min="0" value_max="45" value_wrap="true" value_increment="1" />
	</append>
	<append xpath="/windows/window[@name='windowVehicleStorage']/panel[@name='header']/rect[@controller='ContainerStandardControls']">		
		<combobox depth="3" name="cbxLockedSlots" pos="70,-7" width="100" height="30" tooltip_key="xuiStashLockedSlots" type="ComboBoxInt" value_min="0" value_max="{container_slots}" value_wrap="true" value_increment="1" />
	</append>

    <!-- Hunger bar under hotbar, we changed to a brighter green-->
    <set xpath="//window[@name='windowToolbelt']/rect/rect[@stat_type='Food']/filledsprite[@type='filled']/@color">124,252,0,255</set>
    <!-- Thirst bar under hotbar, we changed to a brighter blue-->
    <set xpath="//window[@name='windowToolbelt']/rect/rect[@stat_type='Water']/filledsprite[@type='filled']/@color">0,255,255,255</set>
    <!-- Exp bar under hotbar, we changed to a brighter purple-->
    <set xpath="//window[@name='windowToolbelt']/rect/sprite[@depth='4']/@color">255,0,255,255</set>

    <!-- Updated Compass UI to include more info by RELXIX-->
    <!-- Modify existing window -->
	<remove xpath="/windows/window[@name='windowCompass']/sprite[@sprite=''][@color='255,255,255,255']" />
	<insertAfter xpath="/windows/window[@name='windowCompass']/texture[@name='compassTexture3']" >
		<rect name="rect_compassStats" pos="0,-5">
			<sprite name="sprite_compassStatsBackground" depth="0" pos="48,-39" width="384" height="24" type="sliced" fillcenter="false" color="0,0,0,100" sprite="ui_game_header_fill" />
			
			<sprite name="sprite_compassClock" depth="2" pos="50,-41" size="20,20" sprite="ui_game_symbol_clock" color="*" foregroundlayer="true"/>
			<label name="label_compassDayTime" depth="2" pos="70,-40" width="172" height="24" text="  [{daycolor}]{day|always}[-]  [DECEA3]{time|always}[-]" font_size="22" effect="outline" />
			
			<rect name="rect_compassMapStats" pos="40,-40" width="400" height="32" controller="MapStats" anchor="CenterTop">		
				<sprite name="sprite_compassTemp" depth="2" pos="142,-1" size="20,20" sprite="ui_game_symbol_temperature" color="*" foregroundlayer="true"/>
				<label name="label_compassTemp" depth="2" pos="162,0" width="172" height="24" text=" [DECEA3]{maptemperature}[-]" font_size="22" effect="outline" />
				
				<sprite name="sprite_compassWind" depth="2" pos="222,-1" size="20,20" sprite="ui_game_symbol_wind" color="*" foregroundlayer="true"/>
				<label name="label_compassWind" depth="2" pos="242,0" width="172" height="24" text=" [DECEA3]{mapwind} MPH[-]" font_size="22" effect="outline" />
				
				<sprite name="sprite_compassElevaytion" depth="2" pos="312,-1" size="20,20" sprite="ui_game_symbol_climb" color="*" foregroundlayer="true"/>
				<label name="label_compassElevation" depth="2" pos="332,0" width="172" height="24" text=" [DECEA3]{mapelevation} M[-]" font_size="22" effect="outline" />
			</rect>
		</rect>
	</insertAfter>

    <!-- This server info panel was left by the fun pimps -->
    <append xpath="/windows">
        <window name="serverinfowindow" anchor="CenterTop" pos="-450,-100" width="930" height="800" cursor_area="true">
            <panel name="header" pos="0,0" height="43" depth="1" disableautobackground="true" >
                <sprite depth="1" name="backgroundMain" sprite="menu_empty3px" pos="0,0" height="43" color="[black]" type="sliced" fillcenter="true" globalopacity="true" globalopacitymod="0"/>
                <label style="header.name" pos="6,-6" text="Server Information" />
            </panel>
            <panel name="content" pos="0,-46" height="750" depth="1" pivot="center" disableautobackground="true" >
                <sprite depth="6" name="border" sprite="menu_empty3px" pos="0,0" height="750" color="[black]" type="sliced" fillcenter="false" globalopacity="true" globalopacitymod="0.9" />
                <sprite depth="1" name="backgroundMain" sprite="menu_empty3px" pos="2,-2" height="746" width="930" color="[black]" type="sliced" fillcenter="true" globalopacity="true" globalopacitymod="0" />

                <label pos="10,-10" depth="2" text="Mod Features:" />
                <grid pos="10,-42" rows="0" depth="3" cell_width="930" cell_height="32" repeat_content="false" arrangement="vertical" globalopacity="true" globalopacitymod="0">
                    <label text="- Important:Crops can now be picked up with [EEEE22]E[-] again, but punching them will give way more yield." />
                    <label text="- [00D12A]Trees[-] now turn into Stumps when destroyed."/>
                    <label text="- Lots of [FF0034]colored[-] text."/>
                    <label text="- Zombies now turn into the gore blocks on death 20% of the time."/>
                    <label text="- No more spread on guns, where you shoot is where it fires."/>
                    <label text="- Auger/Chainsaw noises lowered."/>
                    <label text="- All headshots should be an instant kill except maybe on very tough zombies."/>
                    <label text="- Body backpacks/loot bags now do not despawn for 6 days IRL."/>
                    <label text="- Crosshair turns off when aiming down sights on all weapons except bows."/>
                    <label text="- Crops do not get destroyed when harvested."/>
                    <label text="- Cars now have chances to drop Wheels when harvesting."/>
                    <label text="- Re-added [00D12A]terrain[-] based movement speed."/>
                    <label text="- [EEEE22]Hay Bales[-] are 0 fall damage again."/>
                    <label text="- Gain 5 skill points per level, all skills cost 1 points, level gates removed for skills."/>
                    <label text="- Tons of recipes added and tons of recipes changed."/>
                    <label text="- You should be able to make a schematic of a weapon you find at a workbench."/>
                    <label text="- You gain 3x the amount of ammo when crafting it."/>
                    <label text="- Traders now open basically 24/7, don't abuse it."/>
                    <label text="- https://github.com/RobbieW69/My-7DTD-Modlets"/>
                </grid>
            </panel>
        </window>
    </append>

</windows>